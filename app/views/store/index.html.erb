<h1>software manuals and supply shop</h1>

<p id="notice">
  <%= notice %>
  
</p>


<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td>
          <td><%= button_to 'Add to Cart', line_items_path(product_id: product)%></td>
          
          <td>
          <%= link_to 'Show', product , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

